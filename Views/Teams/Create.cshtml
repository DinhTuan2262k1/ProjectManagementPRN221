            </div>
            <div class="form-group">
                <label asp-for="Leader" class="control-label"></label>
                <select asp-for="Leader" class ="form-control" asp-items="ViewBag.Leader"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mssvs" class="control-label"></label>
                <select asp-for="Mssvs" multiple class="form-control" asp-items="ViewBag.Leader"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
